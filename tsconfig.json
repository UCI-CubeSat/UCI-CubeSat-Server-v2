{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dev",
        "strict": true,
        "rootDir": "./",
        "baseUrl": ".",
        // Track this issue to turn on libCheck: https://github.com/vitejs/vite/issues/11552
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
        },
        "noErrorTruncation": true
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "prisma/**/*"
    ]
}