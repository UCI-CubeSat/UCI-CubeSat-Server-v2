{
  "name": "express_ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "clean:prod": "rimraf ./prod",
    "clean:dev": "rimraf ./dev",
    "clean": "npm-run-all --parallel clean:dev clean:prod",
    "tsc:prod": "tsc -p tsconfig.prod.json",
    "alias:prod": "tsc-alias -p tsconfig.prod.json",
    "build:prod": "npm run db && npm run tsc:prod && npm run alias:prod",
    "start:prod": "cross-env NODE_ENV=production node -r dotenv/config ./prod/src/index.js",
    "prod": "npm run build:prod && npm run start:prod",
    "tsc:dev": "tsc -p tsconfig.json",
    "alias:dev": "tsc-alias -p tsconfig.json",
    "build:dev": "npm run tsc:dev && npm run alias:dev",
    "start:dev": "cross-env NODE_ENV=development node -r dotenv/config ./dev/src/index.js",
    "dev": "npm run build:dev && npm run start:dev",
    "tsc:dev:watch": "tsc --watch -p tsconfig.json",
    "alias:dev:watch": "tsc-alias --watch -p tsconfig.json",
    "build:dev:watch": "npm-run-all --parallel tsc:dev:watch alias:dev:watch",
    "start:dev:watch": "cross-env NODE_ENV=development nodemon -r dotenv/config ./dev/src/index.js",
    "dev:watch": "npm-run-all --parallel tsc:dev:watch alias:dev:watch start:dev:watch",
    "test": "cross-env NODE_ENV=development dotenv -e .env vitest",
    "db:pull": "npx prisma db pull",
    "db:generate": "npx prisma generate",
    "db:seed": "cross-env NODE_ENV=production node -r dotenv/config ./dev/prisma/seed.js",
    "db": "npm run db:pull && npm run db:generate"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.0.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.13.0",
    "rimraf": "^4.0.5",
    "supertest": "^6.3.3",
    "tsc-alias": "^1.8.2",
    "typescript": "^4.9.4",
    "vitest": "^0.26.3"
  },
  "dependencies": {
    "@prisma/client": "^4.13.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "zod": "^3.20.2"
  }
}